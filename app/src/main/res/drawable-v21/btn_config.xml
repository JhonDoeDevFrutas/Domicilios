<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Green-->
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#00b398" />
            <stroke
                android:width="1dp"
                android:color="#004d41" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00b398"
                android:endColor="#004d41"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#004d41" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
